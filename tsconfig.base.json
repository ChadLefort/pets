      "@pets/types": ["../../../libs/types/src/index.ts"],
      "@pets/pets": ["../../../libs/pets/src/index.ts"],
      "@pets/auth": ["../../../libs/auth/src/index.ts"],
      "@pets/utils": ["../../../libs/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
